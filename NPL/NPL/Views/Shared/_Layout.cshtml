<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/shared/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/shared/bootstrappage.css" rel="stylesheet" />
    <link href="~/Content/shared/main.css" rel="stylesheet" />
    <link href="~/Content/shared/flexslider.css" rel="stylesheet" />
    <script src="~/Scripts/shared/jquery-1.7.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/shared/superfish.js"></script>
    <script src="~/Scripts/shared/jquery.scrolltotop.js"></script>    
</head>
<body>
    @*Plugin FaceBook*@
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.12&appId=383980038745853&autoLogAppEvents=1';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>    
    <!--
      Below we include the Login Button social plugin. This button uses
      the JavaScript SDK to present a graphical Login button that triggers
      the FB.login() function when clicked.
    -->
    <header>
        <div id="header">
            <div id="logo" class="col-2">
                <img src="~/Images/Ảnh1.png" class="img-header" />
            </div>
            <div id="banner" class="col-10">
                @*<img src="~/Images/Ảnh2.png" class="img-header" />*@

                <div id="demo" class="carousel slide" data-ride="carousel">

                    <!-- The slideshow -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Images/Ảnh2.png" alt="banner 1" class="img-header">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/Ảnh3.png" alt="banner 2" class="img-header">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/Ảnh4.png" alt="banner 3" class="img-header">
                        </div>
                    </div>
                </div><!--Carousel-->
            </div>
        </div>
    </header>
    <div class="clearfix"></div>
    <nav class="navbar navbar-expand-md bg-custom navbar-dark">
        <!-- Brand -->
        @Html.ActionLink("Menu", "Index", "NPL", null, new { @class = "navbar-brand navbar-brand-custom" })
        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Navbar links -->
        <div class="collapse navbar-collapse navbar-collapse-custom" id="collapsibleNavbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <!-- Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Dropdown link
                    </a>
                    <div class="dropdown-menu dropdown-custom">
                        <a class="dropdown-item" href="#">Link 1</a>
                        <a class="dropdown-item" href="#">Link 2</a>
                        <a class="dropdown-item" href="#">Link 3</a>
                    </div>
                </li>
            </ul>
            @*Partial*@
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.Action("GioHangPartial", "GioHang")
                </li>
                <li class="nav-item">
                    @Html.Action("TaiKhoan", "NguoiDung")
                </li>
            </ul>
        </div>
    </nav>
    <!-- menu doc-->
    <div id="slider">
        <div id="tooplate_wrapper">
            <div id="tooplate_sidebar">
            </div>
            <!-------------------->
        </div>
    </div>
    <br />
    @RenderBody()
    <div class="container body-content">
        <hr />

        <footer>
            <section id="footer-bar" style="background-color:tomato">
                <div class="row">
                    <div class="span2">
                        <h4>Liên hệ</h4>
                        <ul class="nav">
                            <li>
                                <a>abc</a>
                                <a>abc</a>
                                <a>abc</a>
                                <a>abc</a>
                            </li>
                        </ul>
                    </div>
                    <div class="span2">
                        <h4>Liên kết</h4>
                        <ul class="nav">
                            <li>
                                <a>Trang chủ</a>
                                <a>Trang chủ</a>
                            </li>
                        </ul>
                    </div>
                    @*Fanpage Facebook*@
                    <div class="row col">
                        <div class="span2">
                            <h4>Kết nối với chúng tôi</h4>
                            <ul class="nav">
                                <li>
                                    <div style="height:70%; width:330px" class="fb-page icon-repeat" data-href="https://www.facebook.com/NPL-583877955305428/" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/NPL-583877955305428/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/NPL-583877955305428/">NPL</a></blockquote></div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    @*Zalo chat*@
                    <div class="zalo-chat-widget " data-oaid="2443317400706361226" data-welcome-message="Rất vui khi được hỗ trợ bạn!" data-autopopup="1" data-width="350" data-height="420"></div>
                    <script src="https://sp.zalo.me/plugins/sdk.js"></script>
                    @*Maps*@
                    <div class="row col">
                        <div class="span2">
                            <h4>Trải nghiệm trực tiếp</h4>
                            <ul class="nav">
                                <li>
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.123600824663!2d106.71265711449475!3d10.801844361678471!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528a459cb43ab%3A0x6c3d29d370b52a7e!2sHUTECH+University!5e0!3m2!1sen!2s!4v1522915287888" frameborder="1" style="border:medium; height:120px"></iframe>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
            <p>&copy; @DateTime.Now.Year - Đồ án môn học Lập trình web</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
