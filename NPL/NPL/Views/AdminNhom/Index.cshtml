@model IEnumerable<NPL.Models.Nhom>

@{
    /**/

    ViewBag.Title = "Nhom";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Nhóm</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-outline-success btn-create" })
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    Tên nhóm
                </th>
                <th>
                    Số lượng
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNhom)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDNhom }, new { @class = "btn btn-outline-secondary" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDNhom }, new { @class = "btn btn-outline-info" })
                        <a id="deleteItem" class="deleteItem btn btn-danger" data-target="#basic" data-toggle="modal" data-path="@item.IDNhom" href="#">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="modal fade" id="basic" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Xác nhận xóa</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa nhóm này?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "AdminNhom", FormMethod.Post))
                {
                    <input type="hidden" name="id" id="deleteID" value="" />
                    <input type="submit" class="btn btn-danger btn-ok" value="Đồng ý xóa" />
                }

                <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.IsError == true)
{
    <!-- Modal -->
    <div class="modal fade" id="errorModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">                    
                    <h4 class="modal-title">Lỗi</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body modal-body-custom">
                    <div class="alert alert-danger">
                        @ViewBag.ErrorBody
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </div>

        </div>
    </div>
}

